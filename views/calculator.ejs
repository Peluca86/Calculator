<style>
    @font-face {
        font-family: "Open 24 Display St";
        src: url('./../assets/font/Open-24-Display-St.ttf');
    }

    :root {
        font-size: 15px;
    }

    .calculadora {
        font-family: 'Open 24 Display St';
        display: flex;
        flex-direction: column;
        width: 25%;
        margin: auto;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid #00000042;
    }

    .pantalla {
        width: 100%;
    }

    .input-pantalla {
        width: 100%;
        height: 6rem;
        border: none;
        border-bottom: 1px solid #00000042;
        outline: none;
        padding: 0px;
        margin: 0px 0px 1px 0px;
        
    }


    .botones {
        display: grid;
        /* background-color: red; */
        text-align: center;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr 1fr 1fr;
        gap: 5px;
    }

    .tecla {
        font-size: 2.5rem;
        aspect-ratio: 1;
        border-radius: 100%;
        cursor: pointer;
        transition: opacity .1s;
        border: none;
        outline: none;
    }

    .ColorGris {
        background-color: rgb(195, 187, 187);
    }

    .ColorNaranja {
        background-color: orange;
    }

    .tecla:hover {
        opacity: .7;
    }


    #cero {
        grid-column: 1 / 3;
        aspect-ratio: 0;
        border-radius: 50px;
    }

    @media (max-width: 1200px) {
        :root {
            font-size: 14px;
        }

        .calculadora {
            width: 40%;
        }
    }

    @media (max-width: 768px) {
        :root {
            font-size: 12px;
        }
        .calculadora {
            width: 50%;
        }
    }

    @media (max-width: 576px) {
        :root {
            font-size: 12px;
        }
        .calculadora {
            width: 55%;
        }
    }

    @media (width < 576px) {
        :root {
            font-size: 10px;
        }
        .calculadora {
            width: 70%;
        }
    }

    
    
</style>


<div class="calculadora">
