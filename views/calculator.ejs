<style>
    @font-face {
        font-family: "Custom Font";
        src: url('./../assets/font/Custom-Font.ttf');
    }

    .buttons-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        width: 400px;
    }

    .button {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        font-size: 2em;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        background-color: yellow;
    }

    .pantalla {
        width: 300px;
        height: 80px;
        border: 1px solid black;
        border-radius: 5px;
        text-align: right;
        padding: 10px;
        font-size: 1.5em;
        margin-bottom: 10px;
    }

</style>

<div class="calculator">
    <div class="pantalla">0</div>
    <div class="buttons-container">
        <div class="button" onclick="clearScreen()">AC</div>
        <div class="button" onclick="appendToScreen('(')">(</div>
        <div class="button" onclick="appendToScreen(')')">)</div>
        <div class="button orange" onclick="appendToScreen('/')">/</div>

        <div class="button gray" onclick="appendToScreen('7')">7</div>
        <div class="button gray" onclick="appendToScreen('8')">8</div>
        <div class="button gray" onclick="appendToScreen('9')">9</div>
        <div class="button orange" onclick="appendToScreen('*')">x</div>

        <div class="button gray" onclick="appendToScreen('4')">4</div>
        <div class="button gray" onclick="appendToScreen('5')">5</div>
        <div class="button gray" onclick="appendToScreen('6')">6</div>
        <div class="button orange" onclick="appendToScreen('-')">-</div>

        <div class="button gray" onclick="appendToScreen('1')">1</div>
        <div class="button gray" onclick="appendToScreen('2')">2</div>
        <div class="button gray" onclick="appendToScreen('3')">3</div>
        <div class="button orange" onclick="appendToScreen('+')">+</div>

        <div class="button gray zero" onclick="appendToScreen('0')">0</div>
        <div class="button gray" onclick="appendToScreen('.')">.</div>
        <div class="button orange" onclick="calculate()">=</div>
    </div>
</div>

<script>
let pantalla = document.querySelector('input[name="mogul"]');
let currentInput = '';

function num(value) {
    currentInput += value;
    pantalla.value = currentInput;
}

function borrar() {
    currentInput = '';
    pantalla.value = '';
}

function borrar2() {
    currentInput = currentInput.slice(0, -1);
    pantalla.value = currentInput;
}

function suma() {
    currentInput += '+';
    pantalla.value = currentInput;
}

function rest() {
    currentInput += '-';
    pantalla.value = currentInput;
}

function product() {
    currentInput += '*';
    pantalla.value = currentInput;
}

function dividir() {
    currentInput += '/';
    pantalla.value = currentInput;
}

function coma() {
    currentInput += '.';
    pantalla.value = currentInput;
}

function resultado() {
    try {
        currentInput = eval(currentInput);
        pantalla.value = currentInput;
    } catch (error) {
        currentInput = '';
        pantalla.value = 'Error';
    }
}

</script>
