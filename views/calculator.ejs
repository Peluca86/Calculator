    </div>
    <div class="botones">
        <button onclick="borrar()" class="tecla">AC</button>
        <button onclick="" class="tecla">(</button>
        <button onclick="" class="tecla">)</button>
        <button class="ColorNaranja tecla" onclick="dividir()">/</button>
        <button class="ColorGris tecla" onclick="num(7)">7</button>
        <button class="ColorGris tecla" onclick="num(8)">8</button>
        <button class="ColorGris tecla" onclick="num(9)">9</button>
        <button class="ColorNaranja tecla" onclick="product()">x</button>
        <button class="ColorGris tecla" onclick="num(4)">4</button>
        <button class="ColorGris tecla" onclick="num(5)">5</button>
        <button class="ColorGris tecla" onclick="num(6)">6</button>
        <button class="ColorNaranja tecla" onclick="rest()">-</button>
        <button class="ColorGris tecla" onclick="num(1)">1</button>
        <button class="ColorGris tecla" onclick="num(2)">2</button>
        <button class="ColorGris tecla" onclick="num(3)">3</button>
        <button class="ColorNaranja tecla" onclick="suma()">+</button>
        <button class="ColorGris tecla" id="cero" onclick="num(0)">0</button>
        <button class="ColorGris tecla" id="punto" onclick="coma()">.</button>
        <button class="ColorNaranja tecla" id="igual" onclick="resultado()">=</button>
    </div>
</div>

