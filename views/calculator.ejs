        overflow: hidden;
        margin-left: 38vw;
    }

    div {
        display: flex;
    }

    button {
        width: 14vh;
        height: 14vh;
        border-radius: 100%;
        font-size: 5vh;
        margin: 0.3%;
        border: 0;
    }

    .cero {
        width: 30vh;
        border-radius: 50vh;
        text-align: left;
        padding-left: 35px;
        padding-right: 100px;

