<div class="calculadora">
    <div class="pantalla">
        <input type="text" id="pantalla" name="mogul" readonly>
        <div class="pantalla-botones">
            <button onclick="borrar2()">X</button>
        </div>

    </div>
    <div class="containerbtn">
        <div class="botones">


            <div class="botones-fx">
                <button onclick="borrar()">AC</button>
                <button onclick="agregarOperacion ('(')">(</button>
                <button onclick="agregarOperacion (')')">)</button>
                <button class="ColorNaranja" onclick="agregarOperacion('/')">/</button>
            </div>

            <div class="botones-num">
                <button class="ColorGris" onclick="mostrarNumero(7)">7</button>
                <button class="ColorGris" onclick="mostrarNumero(8)">8</button>
                <button class="ColorGris" onclick="mostrarNumero(9)">9</button>
                <button class="ColorNaranja" onclick="agregarOperacion('*')">x</button>
            </div>

            <div class="botones-num">
                <button class="ColorGris" onclick="mostrarNumero(4)">4</button>
                <button class="ColorGris" onclick="mostrarNumero(5)">5</button>
                <button class="ColorGris" onclick="mostrarNumero(6)">6</button>
                <button class="ColorNaranja" onclick="agregarOperacion('-')">-</button>
            </div>
            <div class="botones-num">
                <button class="ColorGris" onclick="mostrarNumero(1)">1</button>
                <button class="ColorGris" onclick="mostrarNumero(2)">2</button>
                <button class="ColorGris" onclick="mostrarNumero(3)">3</button>
                <button class="ColorNaranja" onclick="agregarOperacion('+')">+</button>
            </div>
            <div class="botones-num">
                <button class="ColorGris cero" onclick="mostrarNumero(0)">0</button>
                <button class="ColorGris punto" onclick="mostrarNumero('.')">.</button>
                <button class="ColorNaranja" class="igual" onclick="resultado()">=</button>
            </div>
            <div id="historial-container"></div>
        </div>
    </div>
</div>

<script>

let operacionActual = '';


    
//------------------------------------------------------------------------------------------------------------------------------
    function actualizarPantalla() {
    document.getElementById('pantalla').value = operacionActual;
    }




    function borrar() {
        operacionActual = '';
            actualizarPantalla();
    
    }

    function borrar2() {
        operacionActual = '';
            actualizarPantalla();
    
    }

    function mostrarNumero(numero) {
        document.getElementById('pantalla').value += numero;
        operacionActual += numero;
            actualizarPantalla();
    }

    function agregarOperacion(operacion) {
            operacionActual += operacion;
            actualizarPantalla();
        }

        function agregarComa() {
        // Verificar si ya hay una coma en el número actual
        if (!numeroActual.includes('.')) {
            // Si no hay una coma, agregarla al número actual
            numeroActual += '.';
            actualizarPantalla();
        }
    }

        function resultado() {
            try {
               
                const resultado = eval(operacionActual);
        
                operacionActual = resultado.toString();
                actualizarPantalla();
            } catch (error) {
                // Maneja errores si es necesario
                alert('Error en la expresión.');
            }
        }

        


</script>